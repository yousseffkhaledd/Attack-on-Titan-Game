<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameGUIcontroller">
    <top>
        <ImageView>
            <Image url="@"/>
        </ImageView>
    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Start Game" onAction="#handleStartGame"/>
            <Button text="Pause Game" onAction="#handlePauseGame"/>
            <Label fx:id="statusLabel" text="Welcome to the Game!"/>
        </HBox>
    </bottom>
</BorderPane>
